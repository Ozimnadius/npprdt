header(class='header--' + header).header
    .header__container
        .header__left
            include ../logo/index
            .header__sk
                a(href="https://sk.ru/" target='_blank')
                    img(src="images/content/logo-sk.svg" alt="lorem")
        .header__center
            .header__contacts
                .header__phone
                    a(href="tel:+7(925)478-75-87")
                        img(src="/images/icons/phone.png" alt="lorem")
                        | +7 (925) 478-75-87
                .header__mail
                    a(href="mailto:info@npprdt.ru")
                        img(src="/images/icons/mail.png" alt="lorem")
                        | info@npprdt.ru

            .header__nav
                .header__item
                    a(href="#").header__item-link О нас
                .header__item
                    a(href="#").header__item-link Разработки
                    .header__drop
                        .header__drop-list
                            each i in ['Терминал электронного взаимодействия','ПО Интерактивного взаимодействия','Система мониторинга','ПО управления базами данных','Разработки под ключ']
                                a(href="#").header__drop-item= i
                -
                    var nav = ['инновации', 'сколково', 'Контакты'];
                .header__item
                    a(href="#").header__item-link инновации
                .header__item
                    a(href="#").header__item-link сколково
                .header__item
                    a(href="#").header__item-link
                        img(src="images/content/logo-sk.svg" alt="lorem")
                        span Контакты
        .header__right
            button(type='button' data-call='btn').header__call.btn заявка
